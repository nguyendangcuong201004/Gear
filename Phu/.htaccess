# Bật cơ chế viết lại URL
    RewriteEngine On

    # 1) Nếu request chính xác là send_email.php thì dừng xử lý (no rewrite)
    #    Dấu '-' (hyphen) nghĩa là “giữ nguyên URL”
    RewriteRule ^send_email\.php$ - [L,NC]

    # 2) Nếu request trỏ tới một file hoặc thư mục tồn tại trên server thì bỏ qua rewrite
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 3) Mọi request khác (URL ảo) sẽ được chuyển về index.php
    RewriteRule ^(.+)$ index.php?url=$1 [L,QSA]